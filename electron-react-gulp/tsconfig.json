{
	"compilerOptions": {
		"jsx": "preserve",
		"target": "es2015",
		"module": "commonjs",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"strictNullChecks": false,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"allowJs": true,
		"strict": true,
		"noEmit": true
	},
	"include": [
		"gulpfile.ts/**/*",
		"src/**/*",
		"test/**/*"
	]
}
