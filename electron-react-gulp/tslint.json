{
	"extends": "tslint:recommended",
	"jsRules": true,
	"rules": {
		"quotemark": [
			true,
			"single"
		],
		"indent": [
			true,
			"tabs",
			2
		],
		"prefer-const": false,
		"interface-name": false,
		"trailing-comma": false,
		"arrow-parens": false,
		"ordered-imports": [
			true,
			{
				"import-sources-order": "any"
			}
		],
		"no-string-literal": false,
		"member-ordering": [
			true,
			{
				"order": [
					"static-field",
					"instance-field",
					"constructor",
					"static-method",
					"instance-method"
				]
			}
		],
		"variable-name": [
			true,
			"ban-keywords",
			"check-format",
			"allow-leading-underscore"
		],
		"no-console": {
			"severity": "warning"
		},
		"curly": [
			true,
			"as-needed"
		],
		"object-literal-sort-keys": false,
		"only-arrow-functions": [
			true,
			"allow-declarations",
			"allow-named-functions"
		],
		"no-var-requires": false
	},
	"linterOptions": {
		"exclude": [
			"node_modules/**/*",
			"dist/**/*"
		]
	}
}
